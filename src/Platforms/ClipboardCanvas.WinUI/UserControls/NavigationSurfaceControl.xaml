<UserControl
    x:Class="ClipboardCanvas.WinUI.UserControls.NavigationSurfaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.WinUI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <local:FloatingCardControl>
        <StackPanel Orientation="Horizontal" Spacing="4">
            <!--  Back button  -->
            <Button
                Command="{x:Bind BackCommand, Mode=OneWay}"
                IsEnabled="{x:Bind IsBackEnabled, Mode=OneWay}"
                Style="{StaticResource NavigationButtonStyle}">
                <FontIcon Glyph="&#xE76B;" />
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Left" Invoked="KeyboardAccelerator_Invoked" />
                </Button.KeyboardAccelerators>
            </Button>

            <!--  Home button  -->
            <Button
                Width="88"
                Command="{x:Bind HomeCommand, Mode=OneWay}"
                Style="{StaticResource NavigationButtonStyle}">
                <FontIcon Glyph="&#xE80F;" />
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Home" Invoked="KeyboardAccelerator_Invoked" />
                </Button.KeyboardAccelerators>
            </Button>

            <!--  Forward button  -->
            <Button
                Command="{x:Bind ForwardCommand, Mode=OneWay}"
                IsEnabled="{x:Bind IsForwardEnabled, Mode=OneWay}"
                Style="{StaticResource NavigationButtonStyle}">
                <FontIcon Glyph="&#xE76C;" />
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Right" Invoked="KeyboardAccelerator_Invoked" />
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>
    </local:FloatingCardControl>
</UserControl>
