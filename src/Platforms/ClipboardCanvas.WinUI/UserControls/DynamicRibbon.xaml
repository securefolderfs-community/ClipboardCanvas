<UserControl
    x:Class="ClipboardCanvas.WinUI.UserControls.DynamicRibbon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClipboardCanvas.WinUI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vc="using:ClipboardCanvas.WinUI.ValueConverters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <vc:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>

    <local:FloatingCardControl>
        <CommandBar
            x:Name="Commands"
            MinHeight="0"
            Margin="-4"
            VerticalAlignment="Center"
            CornerRadius="8"
            DefaultLabelPosition="Right"
            IsOpen="False">
            <CommandBar.Content>
                <!--  File name  -->
                <TextBlock
                    x:Name="Title"
                    MaxWidth="88"
                    Margin="8,14,8,0"
                    VerticalAlignment="Center"
                    x:Load="{x:Bind ToolBarTitle, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                    FontSize="12"
                    Opacity="0.7"
                    Text="{x:Bind ToolBarTitle, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis"
                    ToolTipService.ToolTip="{x:Bind ToolBarTitle, Mode=OneWay}">
                    <TextBlock.ContextFlyout>
                        <MenuFlyout Opening="MenuFlyout_Opening">
                            <MenuFlyoutItem
                                x:Name="RenameOption"
                                x:Load="{x:Bind RenameCommand, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                Command="{x:Bind RenameCommand, Mode=OneWay}"
                                Text="Rename">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8AC;" />
                                </MenuFlyoutItem.Icon>
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="F2" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator x:Name="Separator1" x:Load="{x:Bind RenameCommand, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}" />

                            <MenuFlyoutItem
                                x:Name="CopyPathOption"
                                x:Load="{x:Bind CopyPathCommand, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                Command="{x:Bind CopyPathCommand, Mode=OneWay}"
                                Text="Copy path">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE62F;" />
                                </MenuFlyoutItem.Icon>
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="C" Modifiers="Control,Shift" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="ShowInExplorerOption"
                                x:Load="{x:Bind ShowInExplorerCommand, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                Command="{x:Bind ShowInExplorerCommand, Mode=OneWay}"
                                Text="Open in file explorer">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEC50;" />
                                </MenuFlyoutItem.Icon>
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="E" Modifiers="Control" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </TextBlock.ContextFlyout>
                </TextBlock>
            </CommandBar.Content>

            <!--  Actions  -->
            <CommandBar.PrimaryCommands />
            <CommandBar.SecondaryCommands />
        </CommandBar>
    </local:FloatingCardControl>
</UserControl>
